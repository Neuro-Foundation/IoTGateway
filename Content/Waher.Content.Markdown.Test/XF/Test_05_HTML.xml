	<Label LineBreakMode="WordWrap" HorizontalTextAlignment="Start">
		<Label.FormattedText>
			<FormattedString>
				<Span Text="Indented HTML is permitted, and does not generate a code block" />
			</FormattedString>
		</Label.FormattedText>
	</Label>
